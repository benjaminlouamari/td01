package java_td;

import java.util.Scanner;

public class Td01 {

	public static void main(String[] args) {
		
		Scanner clavier = new Scanner(System.in);
		
		System.out.println("Entrez le rayon d'une sphère:");
		int SPHERE_RADIUS = clavier.nextInt();
		
		clavier.close();
		
		double AREA = 4 * Math.PI * Math.pow(SPHERE_RADIUS, 2) ;
		double VOLUME = 4/3 * Math.PI * Math.pow(SPHERE_RADIUS, 3);
		
		System.out.println("Aire de la sphère: " + AREA);
		System.out.println("Volume de la sphère: " + VOLUME);
		
	}

}
